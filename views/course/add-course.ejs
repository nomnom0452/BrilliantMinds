<% include ../partials/header %>

<main>
    <%- messages('message', locals) %>
    <% if(typeof errors == 'object' && errors){%>
        <% errors.forEach(function (error){ %>
            <div><%= error.msg %></div>
        <% }); %>
    <% }%>
    <div class="row">
        <div class="heading-primary-black">
            <div class="hheading-primary-black--medium heading-primary-black--medium u-font-bold u-font-bold u-text-underline u-margin-top-medium">
                Add Course
            </div>
        </div>
        <form action="/course/" method="POST" class="form u-padding-small">
            <label for="courseName">Course Name</label>
            <input type="text" name="course[name]" id="name" placeholder="name" class="form__field">

            <label for="courseName">Course Requirement</label>
            <textarea name="course[requirement]" id="requirement" cols="30" rows="10" class="form__field"></textarea>

            <label for="courseName">Course Description</label>
            <textarea name="course[description]" id="description" cols="30" rows="10" class="form__field"></textarea>
            
            <label for="courseName">Category</label>
            <input type="text" name="course[category]" id="category" placeholder="name" class="form__field">

            <label for="price" class="u-margin-top-large">price</label>
            <input type="text" name="course[price]" id="price" placeholder="price" class="form__field">

            <input type="submit" value="Add Course" class="button--more u-margin-top-medium">
        </form>
    </div>

</main>

<% include ../partials/footer %>